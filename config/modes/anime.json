{
  "mode_name": "anime",
  "description": "Controls for anime playback using red/yellow color sequences.",
  "actions": {
    "red": {
      "type": "image_sequence",
      "sequence": [
        {
          "image_path": "screenshots/close_btn.png",
          "confidence": 0.9,
          "timeout": 3,
          "wait_after": 0.5
        },
        {
          "image_path": "screenshots/play_btn.png",
          "confidence": 0.7,
          "timeout": 3,
          "wait_after": 0.2
        }
      ],
      "hold_time": 2,
      "description": "Close ad and play video using image detection"
    },
    "yellow": {
      "type": "keyboard",
      "keys": [
        "f"
      ],
      "focus_window": "Firefox",
      "hold_time": 2,
      "description": "Toggle fullscreen"
    }
  },
  "sequences": [
    {
      "pattern": [
        "red",
        "yellow"
      ],
      "time_window": 2.0,
      "action": {
        "type": "next_episode",
        "bookmarklet_name": "next episode",
        "description": "Play next episode (smart)"
      }
    },
    {
      "pattern": [
        "yellow",
        "red"
      ],
      "time_window": 2.0,
      "action": {
        "type": "bookmarklet_sequence",
        "bookmarklet_name": "previous episode",
        "description": "Play previous episode using bookmarklet"
      }
    }
  ]
}