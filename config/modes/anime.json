{
  "mode_name": "anime",
  "description": "Controls for anime playback using red/yellow color sequences.",
  "actions": {
    "red": {
        "type": "mouse_click",
        "position": [3035, 1032],
        "hold_time": 2,
        "description": "Close ad and toggle play/pause"
        },
    "yellow": {
        "type": "keyboard",
        "keys": ["f"],
        "hold_time": 2,
        "description": "Toggle fullscreen"
        }
    },
  "sequences": [
    {
      "pattern": ["red", "yellow"],
      "time_window": 2.0,
      "action": {
        "type": "bookmarklet_sequence",
        "bookmarklet_name": "next episode",
        "description": "Play next episode using bookmarklet"
      }
    },
    {
      "pattern": ["yellow", "red"],
      "time_window": 2.0,
      "action": {
        "type": "bookmarklet_sequence",
        "bookmarklet_name": "previous episode",
        "description": "Play previous episode using bookmarklet"
      }
    }
  ]
}