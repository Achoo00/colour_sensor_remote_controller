{
  "mode_name": "anime",
  "description": "Controls for anime playback using red/yellow color sequences.",
  "actions": {
    "red": {
        "type": "mouse_click",
        "position": [3035, 1032],
        "hold_time": 2,
        "description": "Close ad and toggle play/pause"
        },
    "yellow": {
        "type": "keyboard",
        "key": "f",
        "hold_time": 2,
        "description": "Toggle fullscreen"
        }
    }
  ,
  "sequences": [
    {
      "pattern": ["red", "yellow"],
      "time_window": 2.0,
      "action": {
            "type": "javascript",
            "bookmark": "Next episode",
            "description": "Play next episode"
          }
      },
    {
      "pattern": ["yellow", "red"],
      "time_window": 2.0,
      "action": {
            "type": "javascript",
            "bookmark": "Previous episode",
            "description": "Play previous episode"
          }
      }
    ]
}