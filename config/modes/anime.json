{
  "mode_name": "anime",
  "description": "Controls for anime playback using red/yellow color sequences.",
  "actions": {
    "red": {
      "type": "bookmarklet",
      "name": "close and play",
      "hold_time": 2,
      "description": "Close ad and toggle play/pause using bookmarklet"
    },
    "yellow": {
      "type": "keyboard",
      "keys": [
        "f"
      ],
      "focus_window": "Firefox",
      "hold_time": 2,
      "description": "Toggle fullscreen"
    }
  },
  "sequences": [
    {
      "pattern": [
        "red",
        "yellow"
      ],
      "time_window": 2.0,
      "action": {
        "type": "next_episode",
        "bookmarklet_name": "next episode",
        "description": "Play next episode (smart)"
      }
    },
    {
      "pattern": [
        "yellow",
        "red"
      ],
      "time_window": 2.0,
      "action": {
        "type": "bookmarklet_sequence",
        "bookmarklet_name": "previous episode",
        "description": "Play previous episode using bookmarklet"
      }
    }
  ]
}