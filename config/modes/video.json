{
  "mode_name": "video",
  "description": "Controls for YouTube playback using red/yellow color sequences.",
  "actions": {
    "red": {
        "type": "keyboard",
        "key": "space", 
        "hold_time": 2,
        "description": "Toggle play/pause"
        },
    "yellow": {
        "type": "keyboard",
        "key": "5",
        "hold_time": 2,
        "description": "Middle of video"
        }
    }
  ,
  "sequences": [
    {
      "pattern": ["red", "yellow"],
      "time_window": 2.0,
      "action": {
        "type": "keyboard",
        "key": "f",
        "description": "Toggle fullscreen"
      }
    },
    {
      "pattern": ["yellow", "red"],
      "time_window": 2.0,
      "action": {
        "type": "keyboard",
        "keys": ["shift", "n"],
        "description": "Play next video with yellow → red"
      }
    },
    {
      "pattern": ["yellow", "red", "yellow"],
      "time_window": 2.0,
      "action": {
        "type": "keyboard",
        "keys": ["shift", "p"],
        "description": "Play previous video with yellow → red → yellow"
      }
    }
  ]
}